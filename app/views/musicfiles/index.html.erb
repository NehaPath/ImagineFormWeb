<p id="notice"><%= notice %></p>

<h1>Listing Music Files</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User's email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musicfiles.each do |musicfile| %>
      <tr>
        <td><%= musicfile.description %></td>
        <td><%= musicfile.user.email if musicfile.user%></td>
        <td><%= link_to 'Show', musicfile %></td>
        <% if musicfile.user == current_user %>
          <td><%= link_to 'Edit', edit_musicfile_path(musicfile) %></td>
          <td><%= link_to 'Destroy', musicfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Music File', new_musicfile_path %>
<% end %>